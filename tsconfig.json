{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "rootDir": "./", 
      "outDir": "dist",
      "moduleResolution": "node",
      "sourceMap": true,
      "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["./**/*"], 
    "exclude": ["node_modules"]
}
